{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Train Unsloth Model",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/unsloth_trainer.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {},
            "args": [
                "--model", "unsloth/gemma-7b-bnb-4bit",
                "--output_path", "~/Code/unsloth-docker/output/gemma-7b-bnb-4bit",
                "--num_epochs=1",
                "--num_proc=12",
                "--seq_length=2048"
            ]
        }
    ]
}
